<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
</head>
<body>
<div>
    <h1 class="title">Woder.app</h1>
    <div>
@RenderBody()
    </div>
</div>

</body>
</html>
<style>
    
.title{
    text-align: center;
    font-size: 25px;
}

hr {
width:  100%;
}
    * {
        font-family: "Roboto", sans-serif !important;
        box-sizing: border-box;
    }
    .title{
    font-size: 32px;
    text-align: center;
    }
    
    body {
     min-height: 100vh;
     display: flex;
     flex-direction: column;
     justify-content: center;
     align-items: center;
    }
    
    form {
    display: flex;
    flex-direction: column;
    padding: 1.5rem 2rem;
    max-width: 300px;
    width: 100%;
    margin: 0 1rem;
    border: solid 1px;
    border-radius: 10px;
    border-color: #eaeaea;
    box-shadow: 0 1px 4px 1px #e0e0e0;
    
    }
    
    .field {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-bottom: .5rem;
    }
    
    .field > label{
    font-size: 14px;
    font-weight: bold;
    }
    
    .field > input {
    margin-bottom: .25rem;
    width:  100%;
    line-height: 20px;
    padding:  8px 4px 8px;
    max-width: 100%;
    min-width: 0px;
    border:  1px solid #212121;
    border-radius: 5px;
    }
    
    
    
    .field > input:focus {
    outline: none;
    border:  1px solid #1976d2;
    }
    
    .field > span {
    font-size: 13px;
    color:  #E53935;
    }
    
    .flex-row{
    display: flex;
    flex-direction: row;
     justify-content: space-evenly;
    }
    
    .flex-col{
    display: flex;
    flex-direction: column;
     justify-content: center;
     align-items: center;
    }
    
    .field > button{
        height:  36px;
        min-width: 64px;
        padding: 0 16px;
        background-color: transparent;
        border-radius: 5px;
        border:  1px solid #1976d2;
    }
    
    .field > a {
        
    }
</style>